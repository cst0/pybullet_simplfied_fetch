<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cartesian_envrionment">
<!-- some urdf stuff commented out now that we're an xacro -->
<!--robot name="cartesian_envrionment"-->
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/table.stl"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/table.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0" />
            <inertia ixx="0" ixy="0" iyy="0" izz="0"/>
        </inertial>
    </link>

    <joint name="start_pose_offset_fixed_joint" type="fixed">
        <parent link="base_link" />
        <child link="start_pose_offset_link" />
        <origin xyz="0 0 0" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="start_pose_offset_link">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0" />
            <inertia ixx="0" ixy="0" iyy="0" izz="0"/>
        </inertial>
    </link>

    <joint name="table_to_gripper_x" type="prismatic">
        <parent link="base_link" />
        <child link="x_to_y" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <limit effort="1000" lower="-0.5" upper="0.5" velocity="0.1" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="x_to_y">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0" />
            <inertia ixx="0" ixy="0" iyy="0" izz="0"/>
        </inertial>
    </link>

    <joint name="table_to_gripper_y" type="prismatic">
        <parent link="x_to_y" />
        <child link="y_to_z" />
        <origin xyz="0 0 0" rpy="0 0 ${pi/2}" />
        <limit effort="1000" lower="-0.5" upper="0.5" velocity="0.1" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="y_to_z">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0" />
            <inertia ixx="0" ixy="0" iyy="0" izz="0"/>
        </inertial>
    </link>

    <joint name="table_to_gripper_z" type="prismatic">
        <parent link="y_to_z" />
        <child link="prismatic_output" />
        <origin xyz="0 0 0" rpy="0 -${pi/2} 0 " />
        <limit effort="1000" lower="-0.5" upper="0.5" velocity="0.1" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="prismatic_output">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0" />
            <inertia ixx="0" ixy="0" iyy="0" izz="0"/>
        </inertial>
    </link>

    <joint name="prismatic_to_gripper" type="fixed">
        <parent link="prismatic_output" />
        <child link="gripper_base" />
        <origin xyz="0.560 -0.25 -0.25" rpy="0 ${pi/2} 0" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="gripper_base">
        <inertial>
            <origin rpy="0 0 0" xyz="-0.0900 -0.0001 -0.0017" />
            <mass value="1.5175" />
            <inertia ixx="0.0013" ixy="-0.0" ixz="0.0" iyy="0.0019" iyz="-0.0" izz="0.0024" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/gripper_base.stl"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/gripper_base.stl"/>
            </geometry>
        </collision>
    </link>

    <joint name="gripper_to_finger_left" type="prismatic">
        <limit effort="1000" lower="0.0" upper="-0.048" velocity="0.1" />
        <parent link="gripper_base" />
        <child link="finger_left" />
        <origin xyz="0.048 0 -0.125" rpy="0 0 ${pi/2}" />
        <axis xyz="1 0 0" />
    </joint>

    <joint name="gripper_to_finger_right" type="prismatic">
        <limit effort="1000" lower="0.048" upper="0.0" velocity="0.1" />
        <parent link="gripper_base" />
        <child link="finger_right" />
        <origin xyz="-0.048 0 -0.125" rpy="0 0 ${pi/2}" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="finger_left">
        <inertial>
            <origin rpy="0 0 0" xyz="-0.01 0 0" />
            <mass value="0.0798" />
            <inertia ixx="0.002" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/gripper_finger.stl"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/gripper_finger.stl"/>
            </geometry>
        </collision>
    </link>

    <link name="finger_right">
        <inertial>
            <origin rpy="0 0 0" xyz="-0.01 0 0" />
            <mass value="0.0798" />
            <inertia ixx="0.002" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/gripper_finger.stl"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(cwd)/meshes/gripper_finger.stl"/>
            </geometry>
        </collision>
    </link>
</robot>
